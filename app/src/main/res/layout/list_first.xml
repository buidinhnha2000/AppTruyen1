<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:background="#A8000000"
    android:textColor="#fff">

    <ImageView
        android:id="@+id/imgLinkAnh"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/txtTenTruyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="#FFD700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgLinkAnh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTenChap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:fontFamily="serif"
        android:textColor="#CCFF00"
        app:layout_constraintStart_toStartOf="@+id/txtTenTruyen"
        app:layout_constraintTop_toBottomOf="@+id/txtTenTruyen" />
    <TextView
        android:id="@+id/txtTacGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:fontFamily="serif"
        android:textColor="#CCFFFF"
        app:layout_constraintStart_toStartOf="@+id/txtTenChap"
        app:layout_constraintTop_toBottomOf="@+id/txtTenChap" />

    <TextView
        android:id="@+id/txtTheLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textColor="#CCFF00"
        app:layout_constraintLeft_toRightOf="@+id/txtTenChap"
        app:layout_constraintStart_toEndOf="@+id/txtTenChap"
        app:layout_constraintTop_toTopOf="@+id/txtTenChap" />

</androidx.constraintlayout.widget.ConstraintLayout>