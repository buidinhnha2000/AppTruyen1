<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InforActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/n2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/gg">

            <ImageView
                android:id="@+id/btnBInfor"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_reply_black_24dp" />

            <ImageView
                android:id="@+id/imgLinkAnh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txvTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Text View"
            android:textColor="#FFD700"
            android:textSize="30dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvTenChap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:textColor="#CCFF00"
                android:text="Tên Chap"
                android:textSize="15dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại : "
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#CCFF00"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/txvTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:textColor="#CCFF00"
                android:text="The Loai"
                android:textSize="15dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả : "
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#CCFF00"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/txvTacGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:textColor="#CCFF00"
                android:text="Tac Gia "
                android:textSize="15dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch giả : "
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#CCFF00"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/txvDichGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:textColor="#CCFF00"
                android:text="Dich Gia"
                android:textSize="15dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại truyện : "
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#CCFF00"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/txvLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:textColor="#CCFF00"
                android:text="Loai"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="#A8000000">
            <Button
                android:id="@+id/btnDTruyen"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="#782211"
                android:alpha="0.5"
                android:text="Đọc Truyện"
                android:textSize="25dp"
                android:textColor="#fff"
                android:layout_height="70dp"
                />
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A8000000"
                android:layout_marginTop="70dp"
                app:itemIconTint="#FAD1F8"
                app:itemTextColor="#FAD1F8"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/menu"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Giới thiệu"
            android:textColor="#FFD700"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txvGioiThieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:text="Gioi thieu"
            android:layout_marginBottom="100dp"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>